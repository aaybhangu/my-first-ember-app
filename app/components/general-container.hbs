<LinkTo data-test-cart @route="cart" class="cart-link">
    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
    {{#if this.itemCount }}
    <span data-test-cart-count class="cart-count d-inline-flex justify-content-center align-items-center">
        {{this.itemCount}}
    </span>
    {{/if}}
</LinkTo>
<main class="container mt-5">
    {{yield}}
</main>